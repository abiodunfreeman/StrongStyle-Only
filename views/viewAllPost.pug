extends layout 
block content 
    if posts
        ul
            for post in posts
                li 
                    h3= post.title 
                    p= post.message
                    p= post.date
                    if currentUser
                        a(href=`/user/${post.creator}` class="btn btn-primary") view user 
                        if currentUser.status === 'admin'
                            form(action=`/post/${post._id}/delete`, method="post")
                                button(type="submit" class="btn btn-primary") delete post
